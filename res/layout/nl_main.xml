<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nl.lotterynl.MainActivity" >

    <!-- 界面分为3个部分，标题：3种变化，底部导航：2种变化 -->

    <include
        android:id="@+id/il_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/nl_title" />

    <include
        android:id="@+id/il_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/nl_bottom" />

    <RelativeLayout
        android:id="@+id/il_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/il_bottom"
        android:layout_below="@id/il_title" 
        >
<!--         android:background="@color/green" -->
    </RelativeLayout>

</RelativeLayout>